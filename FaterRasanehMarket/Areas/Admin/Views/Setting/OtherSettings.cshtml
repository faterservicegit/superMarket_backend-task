@model FaterRasanehMarket.ViewModels.Settings.OtherSettingsViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"> سایر تنظیمات </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li href="#" class="breadcrumb-item">تنظیمات </li>
                        <li href="/Admin/Setting/OtherSettings" class="breadcrumb-item active">سایر تنظیمات </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="card shadow w-100">
            <div class="card-body">
                <div id="modal-placeholder"></div>
                <div class="container-fluid mt--7">
                    <div class="row">
                        <div class="card shadow w-100">
                            @if (ViewData.ModelState.IsValid.ToString() == "False")
                            {
                                <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
                            }
                            @if (ViewBag.Alert != null)
                            {
                                <div class="alert alert-success alert-dismissable mb-4">
                                    @ViewBag.Alert
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            <form asp-action="OtherSettings">
                                <div class="card-body mr-4">
                                    <div class="row mt-2 mb-2">
                                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                                                   aria-selected="true">سفارش گیری</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                                                   aria-selected="false">سرویس ایمیل</a>
                                            </li>
                                        </ul>
                                        <div class="tab-content w-100" id="myTabContent">
                                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                                <div class="col-md-9 p-3 border border-dark">
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <label asp-for="OrderSettings.IsTakingOrder" class="control-label"></label>
                                                        </div>
                                                        <div class="col-md-9 form-group row">
                                                            <div>
                                                                @Html.RadioButtonFor(model => model.OrderSettings.IsTakingOrder, "false", new { id = "False" })
                                                                @Html.Label("عدم دریافت سفارش", "عدم دریافت سفارش")
                                                            </div>
                                                            <div class="mr-4">
                                                                @Html.RadioButtonFor(model => model.OrderSettings.IsTakingOrder, "true", new { id = "True" })
                                                                @Html.Label("دریافت سفارش", "دریافت سفارش")
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <label asp-for="OrderSettings.OfflinePayment" class="control-label"></label>
                                                        </div>
                                                        <div class="col-md-9 form-group row">
                                                            <div>
                                                                @Html.RadioButtonFor(model => model.OrderSettings.OfflinePayment, "false", new { id = "false" })
                                                                @Html.Label("غیرفعال", "غیرفعال")
                                                            </div>
                                                            <div class="mr-4">
                                                                @Html.RadioButtonFor(model => model.OrderSettings.OfflinePayment, "true", new { id = "true" })
                                                                @Html.Label("فعال", "فعال")
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-md-3">
                                                            <label asp-for="OrderSettings.OnlinePayment" class="control-label"></label>
                                                        </div>
                                                        <div class="col-md-9 form-group row">
                                                            <div>
                                                                @Html.RadioButtonFor(model => model.OrderSettings.OnlinePayment, "false", new { id = "false" })
                                                                @Html.Label("غیرفعال", "غیرفعال")
                                                            </div>
                                                            <div class="mr-4">
                                                                @Html.RadioButtonFor(model => model.OrderSettings.OnlinePayment, "true", new { id = "true" })
                                                                @Html.Label("فعال", "فعال")
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="form-group row col-md-6">
                                                            <div class="col-md-7 mt-1">
                                                                <label asp-for="OrderSettings.MinOrderForFreeShipping" class="control-label"></label>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <input asp-for="OrderSettings.MinOrderForFreeShipping" class="form-control" />
                                                                <span asp-validation-for="OrderSettings.MinOrderForFreeShipping" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row col-md-6">
                                                            <div class="col-md-3 mt-1">
                                                                <label asp-for="OrderSettings.ShippingCost" class="control-label"></label>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <input asp-for="OrderSettings.ShippingCost" class="form-control" />
                                                                <span asp-validation-for="OrderSettings.ShippingCost" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                                    <div class="col-md-9 p-3 border border-dark">
                                                        <div class="form-group row col-md-10">
                                                            <div class="col-md-3 mt-1">
                                                                <label asp-for="EmailSettings.Email" class="control-label"></label>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <input asp-for="EmailSettings.Email" class="form-control" />
                                                                <span asp-validation-for="EmailSettings.Email" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row col-md-10">
                                                            <div class="form-group row col-md-6">
                                                                <div class="col-md-3 mt-1">
                                                                    <label asp-for="EmailSettings.Username" class="control-label"></label>
                                                                </div>
                                                                <div class="col-md-9">
                                                                    <input asp-for="EmailSettings.Username" class="form-control" />
                                                                    <span asp-validation-for="EmailSettings.Username" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row col-md-6">
                                                                <div class="col-md-3 mt-1">
                                                                    <label asp-for="EmailSettings.Password" class="control-label"></label>
                                                                </div>
                                                                <div class="col-md-9">
                                                                    <input asp-for="EmailSettings.Password" class="form-control" type="password" value="@Model.EmailSettings.Password" />
                                                                    <span asp-validation-for="EmailSettings.Password" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row col-md-10">
                                                            <div class="form-group row col-md-6">
                                                                <div class="col-md-3 mt-1">
                                                                    <label asp-for="EmailSettings.Host" class="control-label"></label>
                                                                </div>
                                                                <div class="col-md-9">
                                                                    <input asp-for="EmailSettings.Host" class="form-control" />
                                                                    <span asp-validation-for="EmailSettings.Host" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row col-md-6">
                                                                <div class="col-md-3 mt-1">
                                                                    <label asp-for="EmailSettings.Port" class="control-label"></label>
                                                                </div>
                                                                <div class="col-md-9">
                                                                    <input asp-for="EmailSettings.Port" class="form-control" />
                                                                    <span asp-validation-for="EmailSettings.Port" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer clearfix">
                                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-block btn-outline-success btn-success float-left" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


