@model List<FaterRasanehMarket.ViewModels.Brand.BrandViewModel>
@if (Model.Count > 0)
{
    @foreach (var brand in Model)
    {
        <div class="col-lg-1 col-md-2 col-sm-3 col-xs-6">
            <a href="@Url.Action("BrandDetails", "Brand", new { brandId = brand.Id })"><img class="brand-icon-small" src="/Data/Brand/@brand.Image" title="@brand.Name" alt="@brand.Name" /></a>
            <a href="#">@brand.Name</a>
        </div>
    }
}