@model List<FaterRasanehMarket.ViewModels.Brand.BrandViewModel>
@if (Model.Count > 0)
{
    <h3 class="subtitle">برندهای تصادفی</h3>
    <div id="carousel" class="owl-carousel nxt">
        @foreach (var brand in Model)
        {
            <div class="item text-center">
                <a href="@Url.Action("BrandDetails","Brand",new {brandId=brand.Id })">
                    <img src="/Data/Brand/@brand.Image" alt="@brand.Name" class="img-responsive brand-icon" />
                    <p class="text-center">@brand.Name</p>
                </a>
            </div>
        }
    </div>
}
