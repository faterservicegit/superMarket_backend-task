@using FaterRasanehMarket.Services.Contracts;
@using FaterRasanehMarket.ViewModels.Settings;
@inject IWritableOptions<SiteSettings> writableLocations
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container">
    <div class="container">
        <div class="row">
            <!--Middle Part Start-->
            <div id="content" class="col-xs-12">
                <div class="row">
                    <div class="col-sm-8">
                        <!-- Slideshow Start-->
                        <div class="slideshow single-slider owl-carousel">
                            <div class="item"> <img style="width:100%;height:400px" class="img-responsive" src="/Data/Market/MarketImage1.jpeg" alt="banner 1" /></div>
                            <div class="item"> <img style="width:100%;height:400px" src="/Data/Market/MarketImage2.jpeg" alt="banner 2" /></div>
                            <div class="item"> <img style="width:100%;height:400px" src="/Data/Market/MarketImage3.jpeg" alt="banner 3" /></div>
                            <div class="item"> <img style="width:100%;height:400px" class="img-responsive" src="/Data/Market/MarketImage4.jpeg" alt="banner 4" /></div>
                        </div>
                        <!-- Slideshow End-->
                    </div>
                    <div class="col-sm-4 pull-right flip">
                        <div class="marketshop-banner">
                            <div class="row">
                                @{ var rnd = new Random();
                                    var firstimage = $"Company{rnd.Next(1, 5)}.jpeg";
                                    var secondimage = $"Company{rnd.Next(6, 10)}.jpeg";
                                }
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"> <img style="width:100%;height:185px" title="sample-banner1" alt="sample-banner1" src="/Data/Company/@firstimage"></div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"> <img style="width:100%;height:185px" title="sample-banner" alt="sample-banner" src="/Data/Company/@secondimage"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- پرفروش ها محصولات Start-->
                @await Component.InvokeAsync("BestSellingProducts")
                <!-- پرفروش ها محصولات End-->
                <!-- Banner Start-->
                <div class="marketshop-banner">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><img class="baner-image" title="شنزارمارکت" alt="شنزارمارکت" src="/Main/image/banner/Products2.jpg"></div>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><img class="baner-image" title="شنزارمارکت" alt="شنزارمارکت" src="/Main/image/banner/Products4.jpg"></div>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><img class="baner-image" title="شنزارمارکت" alt="شنزارمارکت" src="/Main/image/banner//Products3.jpg"></div>
                    </div>
                </div>
                <!-- Banner End-->
                <!-- بیشترین تخفیف محصولات Start-->
                @await Component.InvokeAsync("MostDiscountedProducts")
                <!-- بیشترین تخفیف محصولات End-->
                <!-- جدید محصولات Start-->
                @await Component.InvokeAsync("MostNewProducts")
                <!-- جدید محصولات End-->
                <!-- Banner Start -->
                <div class="marketshop-banner brand-border">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin:auto"> <a href="#"><img class="brand-poster-img" title="1 Block Banner" alt="1 Block Banner" src="/Main/image/Brands.jpg"></a></div>
                    </div>
                </div>
                <!-- Banner End -->
                <!-- برند Logo Carousel Start-->
                @await Component.InvokeAsync("RandomBrands")
                <!-- برند Logo Carousel End -->
            </div>
            <!--Middle Part End-->
        </div>
    </div>
</div>
<!-- Feature Box Start-->
<div class="container">
    <div class="custom-feature-box row">
        <div class="col-sm-4 col-xs-12">
            <div class="feature-box fbox_1">
                <div class="title">ارسال رایگان</div>
                <p>@(writableLocations.Value.OrderSettings.MinOrderForFreeShipping==0?"": $"برای خرید های بیش از {writableLocations.Value.OrderSettings.MinOrderForFreeShipping} ریال")</p>
            </div>
        </div>
        <div class="col-sm-4 col-xs-12">
            <div class="feature-box fbox_3">
                <div class="title">کارت هدیه</div>
                <p>بهترین هدیه برای عزیزان شما</p>
            </div>
        </div>
        <div class="col-sm-4 col-xs-12">
            <div class="feature-box fbox_4">
                <div class="title">امتیازات خرید</div>
                <p>از هر خرید امتیاز کسب کرده و از آن بهره بگیرید</p>
            </div>
        </div>
    </div>
</div>
<!-- Feature Box End-->
